<h1>Add a New Wine</h1>
<form class="wine-new">
  <fieldset class="producer">
    <label>Producer:</label>
    {{input value=wine.producer}}
  </fieldset>
  <fieldset class="name">
    <label>Name:</label>
    {{input value=wine.name}}
  </fieldset>
  {{field-set classname="wine-type" selectElementId="wine-type" label="wine-type" value=wine.wineType models=wineTypes selectAction=(action "setWineType")}}
  {{field-set classname="country" selectElementId="country" label="Country" value=wine.country models=countries selectAction=(action "setCountry")}}
  {{#if stateOptionsFiltered}} 
    {{field-set classname="state" selectElementId="state" label="State" value=wine.state models=stateOptionsFiltered selectAction=(action "setState")}}
  {{/if}}
  {{#if wineRegionOptionsFiltered}}
    {{field-set classname="wine-region" selectElementId="wine-region" label="Wine Region" value=wine.wineRegion models=wineRegionOptionsFiltered selectAction=(action "setWineRegion")}}
  {{/if}}
  {{#if appellationOptionsFiltered}}
  {{field-set classname="appellation" selectElementId="appellation" label="Appellation" value=wine.appellation models=appellationOptionsFiltered selectAction=(action "setAppellation")}}
  {{/if}}
</form>
