<h1>This is soda-form.hbs template to render soda-form component</h1>
<form class="soda-new">
  <div class="soda-name">
    <fieldset class="name">
      <label>Name:</label>
      {{input value=soda.name}}
    </fieldset>
  </div>
  <div class="soda-brand">
    <fieldset class="brand">
      <label>Brand:</label>
      {{input value=soda.brand}}
    </fieldset>
  </div>
  <div class="soda-parent-company">
    <fieldset class="parent-company">
      <label>Parent company:</label>
      {{input value=soda.parentCompany}}
    </fieldset>
  </div>
  <div class="soda-country">
    <fieldset class="country">
      <label>Country:</label>
      <!-- <select onchange={{action 'setCountry' value="target.value"}}>
      {{#each countries as |countryChoice|}}
        <option value={{countryChoice.id}} selected={{eq country countryChoice}}>{{countryChoice.name}}</option>
      {{/each}}
      </select> -->

      {{#power-select selected=soda.country options=countries onchange=(action "setCountry") as |country|}}
        {{country.name}}
      {{/power-select}}

    </fieldset>
  </div>
  <div class="soda-origin-data">
    <fieldset class="origin-data">
      <label>Additional info on soda origin:</label>
      {{input value=soda.originData}}
    </fieldset>
  </div>
   <div class="soda-diet">
    <fieldset class="diet">
      <label>Diet:</label>
      {{input type="checkbox" name="isDiet" checked=isDiet click=(action "setDiet")}}
    </fieldset>
  </div>
  <div class="soda-caffeinated">
    <fieldset class="caffeinated">
      <label>Caffeinated:</label>
      {{input type="checkbox" name="isCaffeinated" checked=isCaffeinated}}
    </fieldset>
  </div>
</form>